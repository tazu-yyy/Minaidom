{
  "manifest_version": 2,
  "name": "Minaidom",
  "version": "1.1",

  "description": "Hide the comment field in Mildom stream.",

  "icons": {
    "48": "icons/icon.png"
  },

  "content_scripts": [
    {
      "matches": ["*://*.mildom.com/*"],
      "js": ["jquery.js", "minaidom.js"]
    }
  ],

  "web_accessible_resources": [
    "icons/off_gray.png"
  ]
}
